<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Mon App RPG !
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block body %}
		<h1>Mon App RPG</h1>
			<ul>
				<li>
					<h3>Personnages</h3>
					<table>
						<tr>
							<td>Nom</td>
							<td>Niveau</td>
						</tr>
						{% for character in characters %}
							<tr>
								<td>{{ character.name }}</td>
								<td>{{ character.level }}</td>
								<td>
									<a type="button" href="character/{{ character.id }}">Afficher les détails</a>
								</td>
							</tr>
						{% endfor %}
					</table>

					<ul>
						<p></p>
						<li>
							<a href="/character/new">Ajouter un personnages</a>
						</li>
					</ul>
				</li>
				<li>
					<h3>Classes</h3>
					<ul>
						<li><a href="/type">Afficher les classes</a></li>
					</ul>
				</li>
				<li>
					<h3>Compétences</h3>
					<ul>
						<li><a href="/skill">Afficher les compétences</a></li>
					</ul>
				</li>
			</ul>


		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script> 
	</body>

</html>
