<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	{% block body %}
		<ul>
			<li>
				<h3>Personnages</h3>
				<table>
					<tr>
						<td>Nom</td>
						<td>Niveau</td>
					</tr>
					{% for character in characters %}
						<tr>
							<td>{{ character.name }}</td>
							<td>{{ character.description }}</td>
							<td>
								<a type="button" href="character/{{ character.id }}">Afficher les détails</a>
							</td>
						</tr>
					{% endfor %}
				</table>

				<ul>
					<p></p>
					<li>
						<a href="/character/new">Ajouter un personnages</a>
					</li>
				</ul>
			</li>
			<li>
				<h3>Classes</h3>
				<ul>
					<li><a href="/type">Afficher les classes</a></li>
				</ul>
			</li>
			<li>
				<h3>Compétences</h3>
				<ul>
					<li><a href="/skill">Afficher les compétences</a></li>
				</ul>
			</li>
		</ul>


	{% endblock %}

</html>
